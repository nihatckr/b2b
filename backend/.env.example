# Database Configuration
DATABASE_URL="mysql://user:password@localhost:3306/textile_test_db1"

# Server Configuration
PORT=4001
NODE_ENV=development  # Options: development, production

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-here

# File Upload Configuration
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads

# GraphQL Configuration
GRAPHIQL_ENABLED=true  # Automatically disabled in production (NODE_ENV=production)

# Frontend URL (for CORS configuration)
# Development: Automatically allows localhost:3000, localhost:3001
# Production: Set this to your frontend domain
FRONTEND_URL=https://yourdomain.com

# CORS Configuration (optional - for advanced custom origins)
# CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging Level (optional)
# LOG_LEVEL=debug  # Options: debug, info, warn, error

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password  # 16-character app password from Google
EMAIL_FROM=Textile System <your-email@gmail.com>
APP_NAME=Textile Production System

# Email Behavior (optional)
# SEND_INSTANT_WELCOME_EMAIL=false  # Send welcome email immediately on signup (before email verification)
#                                   # Default: false (welcome email sent after email verification)
